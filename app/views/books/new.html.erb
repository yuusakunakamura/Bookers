<h3>New book</h3>

<% if @book.errors.any? %>
 <ul>
 	<% @book.errors.full_messages.each do |message| %>
 	<li>
 		<%= message %>

 	</li>
 	<% end %>
 </ul>







<%= form_for(@book, url: '/books') do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>

<% end %> 
